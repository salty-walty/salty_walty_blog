<p id="notice"><%= notice %></p>

<div class="panel panel-info">
  <div class="panel-heading ">
    <h1>All posts by <%= @user.username %></h1>
  </div>

  <div class="panel-body">
      <table class="table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Author</th>
              <th>Blog entry</th>
              <th colspan="3"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @user.posts.each do |post| %>
              <tr>
                <td>
                  <%= image_tag profile_pic(post.user.avatar.url), size:30 %>
                </td>
                <td><%= link_to post.title, post %></td>
                <td><%= post.user.username %></td>
                <td><%= post.blog_entry.html_safe %></td>
                <td><%= link_to 'Show', post %></td>
                <td><%= link_to 'Edit', edit_post_path(post) %></td>
                <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
    

      </table>
    
    </div>
  <div class="panel-footer justify-content-center">
  <ul class="list-inline">
    <li class="pull-right"><br><p><%= link_to 'Back', posts_path %></p></li>
  </ul>
  </div>
</div>